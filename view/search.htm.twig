{% extends 'memberbase.htm.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}

  <section class='row col-8 mx-auto no-gutters'>

    <h1>Searching something ?</h1>
        
    <ul class='col-6'>
      {% for tweet in hashtags %}
        <li class="list-group">
            <div class="list-group-item list-group-item-action flex-column align-items-start active mt-3">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ tweet.author }}</h5>
                    <small class='tweet-submited'>{{ tweet.submit_time }}</small>
                </div>
                <p class="mb-1 tweet-author"><a href='profile.php?account={{ tweet.author_account }}'>@{{ tweet.author_account }}</a></p>
                <p class="mb-1 tweet-content">{{ tweet.content }}</p>
                <small type="button" class='tweet-reply'><i class="fas fa-reply"></i></small>
                <small type="button" class='tweet-retweet'><i class="fas fa-retweet"></i></small>
                <small type="button" class='tweet-like'><i class="fas fa-heart"><span class="badge badge-light"></span></i></small>
            </div>
        </li>
      {% endfor %}
    </ul>
    
    <ul class='col-6'>
      <table class='table col-6 mt-5 mx-auto'>
        <tr>
            <th scope='col'>Pseudo</th>
            <th scope='col'>City</th>
            <th scope='col'>Birth date</th>
        </tr>
        {% for member in members %}
          <tr class='table-info'>
            <td><a href='profile.php?account={{ member.account_name }}'>@{{ member.account_name }}</a></td>
            <td>{{ member.pseudo }}</td>
            <td>{{ member.city }}</td>
            <td>{{ member.birth_date }}</td>
        </tr>
        {% endfor %} 
      </table>
      
    </ul>
  </section>

{% endblock %}

{% block javascript %}
  {{ parent() }}
  <script src='js/tweet.js'></script>
{% endblock %}
