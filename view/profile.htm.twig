{% extends 'memberbase.htm.twig' %}

{% block title %}Account Page{% endblock %}

{% block body %}

  <form id='uploadimg'>
    <input id='file' type='file' name='upload'>
    <input id='submitupload' type='submit' name='submitupload' value='Change image'>
  </form>
  <form id='modifyinfo' class='col-6 mx-auto'>
    <input id='email' class='mt-3 form-control' type='email' name='email' value='{{ email }}'>
    <input id='name' class='mt-3 form-control' type='text' name='profilename' value='{{ name }}'>
    <input id='city' class='mt-3 form-control' type='text' name='city' value='{{ city }}'>
    <input id='dob' class='mt-3 form-control' type='date' name='email' value='{{ dob }}'>
    <input id='oldpwd' class='mt-3 form-control' type='password' name='pwd' placeholder='Old password'>
    <input id='pwd' class='mt-3 form-control' type='password' name='pwd' placeholder='Password'>
    <input id='checkpwd' class='mt-3 form-control' type='password' name='pwd' placeholder='Password'>
    <input id='submitinfo' class='mt-3 mx-auto' type='submit' name='submit' value='Change Infos'>
  </form>
{% endblock %}

{% block javascript %}
  <script src='js/profile.js'></script>
{% endblock %}
