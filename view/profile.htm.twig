{% extends 'memberbase.htm.twig' %}

{% block title %}Account Page{% endblock %}

{% block body %}

<div class='row mt-3'>
    <h1 class='mx-auto'>{{ target_name }}'s profile</h1>
</div>

<div class='row mt-3'>
    <img class='mx-auto' src='' alt='Profile Picture'>
</div>

<table class='table col-6 mt-2 mx-auto'>
    <tr>
        <th scope='col'>Pseudo</th>
        <th scope='col'>City</th>
        <th scope='col'>Birth date</th>
    </tr>
    <tr class='table-info'>
        <td>{{ name }}</td>
        <td>{{ city }}</td>
        <td>{{ dob }}</td>
    </tr>
</table>

<div class='row col-6 justify-content-between mx-auto'>
    <button class='btn btn-success' id='follow'>Follow</button>
    <button class='btn btn-success text-right' id'talk'>Send a message</button>
</div>

{% endblock %}

{% block javascript %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src='js/profile.js'></script>
{% endblock %}
