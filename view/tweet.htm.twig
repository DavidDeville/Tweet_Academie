{# 
## View for a tweet
##
## - author: the pseudo of the user (user.display_name)
## - submit_time: when was the tweet posted (tweet.submit_time)
## - author_account: the account of the poster (user.username)
## - content: the content of the tweet (post.content)
#}

<div class="list-group tweet">
    <div class="list-group-item list-group-item-action flex-column align-items-start active mt-3">
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{ author }}</h5>
            <small class='tweet-submited'>{{ submit_time }}</small>
        </div>
        <p class="mb-1 tweet-author"><a href='profile.php?account={{ author_account }}'>@{{ author_account }}</a></p>
        <p class="mb-1 tweet-content">{{ content | link_hashtags | raw }}</p> 
        {# <p class="mb-1 tweet-content">{{ content }}</p> #}
        <small type="button" class='tweet-reply'><i class="fas fa-reply"></i></small>
        <small type="button" class='tweet-retweet'><i class="fas fa-retweet"></i></small>
        <small type="button" class='tweet-like'><i class="fas fa-heart"><span class="badge badge-light"></span></i></small>
    </div>
</div>