{% extends 'base.htm.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}

<div class='row justify-content-center'>
  <form id='signin' class='col-5'>
    <label class='form-control-label' for='signin-mail'>E-mail</label>
    <input type='text' placeholder='Email' class='form-control' id='signin-mail'>

    <label class='form-control-label' for='signin-pwd'>Password</label>
    <input type='password' placeholder='Password' class='form-control' id='signin-pwd'>

    <input id='signin-submit' type='submit'>
  </form>

  <form id='signup' class='col-5'>
    <label class='form-control-label' for='signup-mail'>Email</label>
    <input type='text' placeholder='Email' class='form-control' id='signup-mail'>

    <label class='form-control-label' for='signup-forename'>Forename</label>
    <input type='text' placeholder='Name' class='form-control' id='signup-name'>

    <label class='form-control-label' for='signup-surname'>Surname</label>
    <input type='text' placeholder='Surname' class='form-control' id='signup-surname'>

    <label class='form-control-label' for='signup-city'>City</label>
    <input type='text' placeholder='City' class='form-control' id='signup-city'>

    <label class='form-control-label' for='signup-dob'>Date of birth</label>
    <input type='text' placeholder='City' class='form-control' id='signup-dob'>

    <label class='form-control-label' for='signup-pwd'>Password</label>
    <input type='text' placeholder='Password' class='form-control' id='signup-pwd'>

    <label class='form-control-label' for='signup-pwdcheck'>Password check</label>
    <input type='text' placeholder='Password' class='form-control' id='signup-pwdcheck'>

    <input id='signup-submit' type='submit'>
  </form>
</div>
{% endblock %}
