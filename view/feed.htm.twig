{% extends 'memberbase.htm.twig' %}

{% block title %}TweetAcademie Feed{% endblock %}


{% block body %}
<form id ="tweet">
    <div class="d-flex justify-content-end">
        <div class="mt-3 col-9">
            <div class="row">
                <div class="card-header col-7 bg-primary border-0 text-info">Let's Tweet</div>
                <div class="input-group-text col-1 bg-primary border-0 text-light rounded-0" id="tweet-send" type="button">Send Tweet</div>
            <textarea class="form-control col-8 bg-primary border-0 rounded-0 text-light" placeholder="Type your tweet..." id="tweet-content"></textarea>
            </div>
        </div>
    </div>
</form>
<div class="d-flex justify-content-center">
    <div class="col-6">
        <div class="jumbotron mt-2">
            {% for tweet in tweets %}
                <div class="list-group">
                    <div class="list-group-item list-group-item-action flex-column align-items-start active mt-3">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 tweet-author">{{ tweet.author }}</h5>
                            <small class='tweet-submited'>Posted : {{ tweet.submit_time }}</small>
                        </div>
                        <p class="mb-1 tweet-poster">@{{ tweet.author_account }}</p>
                        <p class="mb-1 tweet-content">{{ tweet.content }}</p>
                        <small type="button" class='tweet-reply'><i class="fas fa-reply"></i></small>
                        <small type="button" class='tweet-retweet'><i class="fas fa-retweet"></i></small>
                        <small type="button" class='tweet-like'><i class="fas fa-heart"><span class="badge badge-light">1664</span></i></small>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
  {{ parent() }}
  <script src='js/forms.js'></script>
  <script src='js/tweet.js'></script>
{% endblock %}