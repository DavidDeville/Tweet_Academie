{# 
## View for the feed, where users can see tweets
##
## - tweets: a list of tweet, to render tweet.htm.twig
##      @see tweet.htm.twig for args it needs
#}

{% extends 'memberbase.htm.twig' %}

{% block title %}TweetAcademie Feed{% endblock %}


{% block body %}
<form id ="tweet">
    <div class="d-flex justify-content-end">
        <div class="mt-3 col-9">
            <div class="row">
                <div class="card-header col-7 bg-primary border-0 text-info">Let's Tweet</div>
                <div class="input-group-text col-1 bg-primary border-0 text-light rounded-0" id="tweet-send" type="button">Send Tweet</div>
            <input type="text" class="form-control col-8 bg-primary border-0 rounded-0 text-light" placeholder="Type your tweet..." id="tweet-content" autocomplete="off"></textarea>
            </div>
        </div>
    </div>
</form>
<div class="d-flex justify-content-center">
    <div class="col-6">
        <div class="jumbotron mt-2">
            {% for tweet in tweets %}
                {% 
                    include('tweet.htm.twig') with 
                    {
                        'author': tweet.author,
                        'submit_time': tweet.submit_time,
                        'author_account': tweet.author_account,
                        'content': tweet.content
                    }
                %}
            {% endfor %}
        </div>
    </div>
</div>
<div id="testos"></div>
{% endblock %}

{% block javascript %}
  {{ parent() }}
  <script src='js/forms.js'></script>
  <script src='js/tweet.js'></script>
{% endblock %}